\setmonofont{DejaVu Sans Mono}


\titleformat{\section}%
  [hang]% shape
  {\large\sffamily}% format applied to label+text
  {\thesection}% label
  {1em}% horizontal separation between label and title body
  {\hspace{-0.2em}}% before the title body
  []% after the title body

\titleformat{\subsection}%
  [hang]% shape
  {\sffamily}% format applied to label+text
  {\thesubsection}% label
  {1em}% horizontal separation between label and title body
  {\hspace{-0.2em}}% before the title body
  []% after the title body

\titleformat{\subsubsection}%
  [hang]% shape
  {\itshape}% format applied to label+text
  {}% label
  {1em}% horizontal separation between label and title body
  {\hspace{-0.2em}}% before the title body
  []% after the title body

\pretitle{\begin{center}\begin{minipage}{0.8\textwidth}\begin{center}\sffamily\Large}
\posttitle{\par\end{center}\end{minipage}\end{center}\vskip 1.0em}
\preauthor{\begin{center}\sffamily\normalsize}
\postauthor{\par\end{center}\vskip 0.2em}
\predate{\begin{center}\sffamily\normalsize}
\postdate{\par\end{center}\vskip 0.5em}

